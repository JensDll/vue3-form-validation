{
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "node --experimental-loader esbuild-node-loader scripts/build.ts",
    "dev": "node --experimental-loader esbuild-node-loader scripts/dev.ts --targets vue3-form-validation",
    "examples": "npm run dev --workspace=examples",
    "docs": "npm run dev --workspace=docs",
    "lint": "npm exec -- eslint --rule=\"no-console: [\"error\", { allow: [\"warn\", \"error\"] }]\" --max-warnings 0 --fix-dry-run ./packages/vue3-form-validation",
    "test": "jest --runInBand",
    "test-dts": "npm run build && npm exec -- tsd",
    "test-dts-only": "npm exec -- tsd",
    "test-all": "npm run test-dts && npm test",
    "postinstall": "husky install"
  },
  "types": "publish/dist/vue3-form-validation.d.ts",
  "tsd": {
    "directory": "test-dts"
  },
  "dependencies": {
    "@microsoft/api-extractor": "^7.18.17",
    "@rollup/plugin-alias": "^3.1.8",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/yargs": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "esbuild": "^0.13.12",
    "esbuild-node-loader": "^0.4.3",
    "eslint": "^8.1.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "rollup": "^2.59.0",
    "rollup-plugin-esbuild": "^4.6.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.7",
    "tsd": "^0.18.0",
    "typescript": "^4.4.4",
    "vue": "3.2.21",
    "yargs": "^17.2.1"
  }
}
