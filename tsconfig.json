{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "ES2019",
    "module": "ES2020",
    "useDefineForClassFields": true,
    "allowJs": false,
    "checkJs": false,
    "lib": ["ES2020", "DOM"],
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*/src"]
    }
  },
  "include": ["packages/vue3-form-validation/src"]
}
