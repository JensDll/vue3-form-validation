{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "target": "ES2019",
    "module": "ES2020",
    "useDefineForClassFields": true,
    "allowJs": false,
    "checkJs": false,
    "lib": ["ES2020", "DOM"],
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["packages/*/src"]
    }
  },
  "include": ["packages/*/src", "packages/*/__tests__", "test-dts"],
  "exclude": ["**/dist", "**/publish", "packages/examples"]
}
